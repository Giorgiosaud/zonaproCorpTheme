.navbar-nav .nav-item + .nav-item
	margin 0
.navbar-customized
	border-radius: 0
	border: transparent
	li
		display: flex
		height: 60px
		align-items: center
		justify-content: flex-start
		&.separator
			height: 1em
			width: 2em
		&>a
			padding 10px
		&.active,&.active>a
			background $mainColor !important
			color #FFF !important
		&:hover,&>a:hover
			background $colorFocusActive !important
			color #FFF !important
		&:focus,&>a:focus
			background $colorFocusActive
			color #FFF
			
@media(max-width: 543px)
	.navbar-customized
		.navbar-brand
			width 100%
			height auto
			display flex
			align-items center
			justify-content center
			img
				width 40%
				height auto
				margin auto
		ul
			display flex
			float left
			flex-direction column
@media (min-width: 768px)
	.navbar-customized
		li
			align-items center
			justify-content center
